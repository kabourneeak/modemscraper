    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Scraper)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/scraper/bin/Debug/net8.0/Scraper.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/scraper",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                // "MODEM__TC4400__PASSWORD": "",
            }
        }
    ]
}